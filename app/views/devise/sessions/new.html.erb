<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="login-container center">
        <div class="title text-transparent">Sign in</div>
        <hr class="main">

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'login-form'}) do |f| %>
            <ul class="fields-list">
              <li>
                <i class="icon-user" style="float: left;"></i>
                <%= f.email_field :email, :autocomplete => "off", :autofocus => true, :id => "username", :placeholder => "Email" %>
              </li>
              <li>
                <i class="icon-key"></i>
                <%= f.password_field :password, :id => "password", :autocomplete => "off", :placeholder => "Password" %>
              </li>
            </ul>

            <div class="actions">
              <%= f.submit 'Login', :class => 'btn btn-large medium-blue login-btn' %>
            </div>

            <hr class="main">
            <div class="social-actions">
              <%= link_to "Forgot Password?", new_password_path(resource_name) ,:class => "social-link text-transparent", :style => "font-size: 1em; padding-top:15px; float:left;" %>
            </div>
      <% end %>
      </div>
    </div>
  </div>
</div>