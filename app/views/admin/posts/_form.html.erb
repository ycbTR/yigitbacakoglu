<%= javascript_include_tag "jquery.cleditor.min" %>
<%= stylesheet_link_tag "admin/jquery.cleditor" %>
<div class="row-fluid">
  <div class="span6">
    <div class="padded">
      <div class="section-title">
        Web Page Details
      </div>
      <div class="vpadded">
        <div class="input full-width">
          <%= f.text_field :title, :placeholder => "title" %>
        </div>
        <div class="input full-width">
          <%= f.text_area :body, :placeholder => 'body', :class => "cleditor", :style => "height:300px;" %>
        </div>
        <div class="input full-width">
          <%= f.text_field :meta_title, :placeholder => 'meta' %>
        </div>
        <div class="input full-width">
          <%= f.text_field :meta_keys, :placeholder => 'meta' %>
        </div>
        <div class="input full-width">
          <%= f.text_area :meta_description, :placeholder => 'meta' %>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="row-fluid">
  <div class="span6">
    <div class="padded">
      <div class="vpadded">
        <%= f.submit "Save", :class => "btn medium-blue" %> or
        <%= link_to "Cancel", admin_posts_path %>
      </div>
    </div>
  </div>
</div>
<script>
    $(function () {
        /* ---------- Text editor ---------- */
        if ($('.cleditor')) {
            $('.cleditor').cleditor();
        }
    })
</script>